<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_doc_profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.DocProfileActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                    android:padding="1dp"
                    android:textSize="20sp"
                    android:layout_marginTop="12dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/text_margin"
                    android:id="@+id/textView_nname"/>
    <LinearLayout
            android:padding="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
                android:padding="1dp"
                android:textSize="15sp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_margin"
                android:id="@+id/textView_residency"/>
        <ImageView
                android:paddingLeft="10dp"
                android:layout_width="30dp"
                android:layout_height="25dp" app:srcCompat="@drawable/ic_star"
                android:id="@+id/imageView_star"
                android:layout_marginTop="14dp"/>
        <TextView
                android:layout_width="wrap_content" android:textSize="15sp"
                android:layout_height="wrap_content" android:id="@+id/textView_Rating"
                android:layout_marginEnd="8dp" android:layout_marginTop="16dp"
                android:textColor="@color/colorPrimary"
                android:paddingLeft="1dp" android:paddingRight="1dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
                android:textStyle="bold"/>
    </LinearLayout>
        <LinearLayout
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:paddingLeft="20dp"
                    android:paddingTop="9dp"
                    android:text="EXPERIENCE:"
                    android:contentDescription="@string/desc"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:layout_gravity="center"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_weight="5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="9dp"
                    android:id="@+id/textView_expe"/>
        </LinearLayout>
        <Button
                android:layout_gravity="center"
                android:text="@string/book_appointment" android:textColor="#FFFFFF"
                android:background="@drawable/book_button"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:id="@+id/button_appointment" android:textAlignment="center"/>
    <TextView
            android:lineSpacingMultiplier="1.5"
            android:padding="12dp"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:id="@+id/textView_Bio"/>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>